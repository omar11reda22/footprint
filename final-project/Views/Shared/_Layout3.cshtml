<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css1/normalize.css" />
    <link rel="stylesheet" href="~/css1/all.min.css" />
    <link rel="stylesheet" href="~/css1/bootstrap.min.css" />
    <link href="~/css1/style2.css" rel="stylesheet" />

</head>
<body>
    <header id="header" class="">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <div class="navbar-brand d-flex justify-content-center align-items-center">
                        <img src="~/images/logo.png" alt="" />
                        <a href="#">FOOTPRINT</a>
                    </div>
                    <button class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mt-0 mb-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link" asp-action="afterindex" asp-controller="Home">Home</a>
                                <span></span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Stats</a>
                                <span></span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Tips</a>
                                <span></span>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="navbarDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Calculate
                                </a>
                                <span></span>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fa-solid fa-user"></i> As a person
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fa-solid fa-user-group"></i> As a
                                            Organisation
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>







    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
